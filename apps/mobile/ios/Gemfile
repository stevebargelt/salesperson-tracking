gem 'activesupport', '>= 6.1.7.5', '!= 7.1.0'
gem 'xcodeproj', '< 1.26.0'

# Fastlane for iOS automation
gem 'fastlane', '~> 2.219'

# Fastlane plugins
gem 'fastlane-plugin-versioning'
gem 'fastlane-plugin-changelog'