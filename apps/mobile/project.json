{
  "name": "mobile",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/mobile/app",
  "targets": {
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx expo start",
        "cwd": "apps/mobile"
      }
    },
    "ios": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx expo run:ios",
        "cwd": "apps/mobile"
      }
    },
    "run-ios": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx expo run:ios",
        "cwd": "apps/mobile"
      }
    },
    "ios-device": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx expo run:ios --device",
        "cwd": "apps/mobile"
      }
    },
    "prebuild": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx expo prebuild",
        "cwd": "apps/mobile"
      }
    },
    "build-ios": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx eas build --platform ios",
        "cwd": "apps/mobile"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "apps/mobile/app/**/*.ts",
          "apps/mobile/app/**/*.tsx",
          "apps/mobile/app/**/*.js",
          "apps/mobile/app/**/*.jsx",
          "!apps/mobile/app/**/*.test.{ts,tsx,js,jsx}",
          "!apps/mobile/app/devtools/**"
        ]
      }
    },
    "type-check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit",
        "cwd": "apps/mobile"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/apps/mobile"],
      "options": {
        "jestConfig": "apps/mobile/jest.config.js",
        "passWithNoTests": true
      }
    },
    "pod-install": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd ios && pod install",
        "cwd": "apps/mobile"
      }
    },
    "fastlane-certificates": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd ios && bundle exec fastlane certificates",
        "cwd": "apps/mobile"
      }
    },
    "build-development": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd ios && bundle exec fastlane build_development",
        "cwd": "apps/mobile"
      }
    },
    "build-staging": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd ios && bundle exec fastlane build_staging", 
        "cwd": "apps/mobile"
      }
    },
    "build-production": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd ios && bundle exec fastlane build_production",
        "cwd": "apps/mobile"
      }
    },
    "deploy-beta": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd ios && bundle exec fastlane deploy_beta",
        "cwd": "apps/mobile"
      }
    },
    "deploy-production": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd ios && bundle exec fastlane deploy_production",
        "cwd": "apps/mobile"
      }
    }
  },
  "tags": ["mobile", "react-native"],
  "implicitDependencies": [
    "types",
    "supabase", 
    "utils"
  ]
}
