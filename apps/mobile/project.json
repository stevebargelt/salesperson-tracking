{
  "name": "mobile",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/mobile/app",
  "targets": {
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx expo start",
        "cwd": "apps/mobile"
      }
    },
    "ios": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx expo run:ios",
        "cwd": "apps/mobile"
      }
    },
    "prebuild": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx expo prebuild",
        "cwd": "apps/mobile"
      }
    },
    "build-ios": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx eas build --platform ios",
        "cwd": "apps/mobile"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/mobile/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "type-check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit",
        "cwd": "apps/mobile"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/apps/mobile"],
      "options": {
        "jestConfig": "apps/mobile/jest.config.js",
        "passWithNoTests": true
      }
    },
    "pod-install": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd ios && pod install",
        "cwd": "apps/mobile"
      }
    }
  },
  "tags": ["mobile", "react-native"],
  "implicitDependencies": [
    "types",
    "supabase", 
    "utils"
  ]
}